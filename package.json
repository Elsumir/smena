    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.2.1"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint --ignore-path .gitignore --fix",
